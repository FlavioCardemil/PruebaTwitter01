<p id="notice"><%= notice %></p>

<p>
  <strong>Content:</strong>
  <%= @tweet.content %>
</p>

<% @tweet_likes.each do |l| %>
  <div class = "container text-center">
    <div class="row">
      <div class>
        <div class="col-sm card pt-4 mb-3 " style="width: 18rem;">
          <%=image_tag l.user.photo %>
          <div class="card-body">
            <h5 class="card-title">@<%= l.user.username%> le gusta este tweet¡¡</h5>
            <p class="card-text"></p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<%= link_to 'Back', tweets_path %>
